<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/extendedFabContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_margin="6dp"
    android:orientation="vertical"
    app:cardCornerRadius="28dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/extendedFabLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/extendedFabImageContainer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_ar_view"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <TextView
            android:id="@+id/extendedFabText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="8dp"
            android:paddingBottom="2dp"
            android:layout_toEndOf="@id/extendedFabImageContainer"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>