<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/noLetInsideImageView"
        android:layout_width="143dp"
        android:layout_height="143dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_tutorial_coronavirus"/>

    <TextView
        android:id="@+id/noLetInsideTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noLetInsideImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="6dp"
        android:text="@string/third_item_tutorial_title"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textColor="#343434"
        android:textSize="41sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/noLetInsideSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noLetInsideTitle"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:gravity="center"
        android:text="@string/third_item_tutorial_subtitle"
        android:fontFamily="sans-serif"
        android:textColor="#343434"
        android:textSize="21sp" />

</RelativeLayout>